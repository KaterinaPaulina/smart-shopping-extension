
{
  "name": "Smart shopping extension",

  "version": "1.0",

  "description": "Build an Extension!",

  "manifest_version": 2,

  "incognito": "split",

  "permissions": [
		"*://*.rohlik.cz/*",
		"*://rohlik.cz/*",
    "https://api.heureka.cz/*",
